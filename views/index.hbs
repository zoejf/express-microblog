<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">

  <!-- set viewport to device width to make site responsive -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- bootstrap css -->
  <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- custom styles -->
  <link rel="stylesheet" type="text/css" href="styles/main.css">

  <title>Express Microblog App</title>
</head>
<body>

  <!-- header -->
  <div class="well">
    <div class="container">
      <div class="page-header">
        <h1><a href="">Microblog </a><small>share your thoughts</small></h1>
      </div>
      <ul class="nav-buttons">
        {{#if user.username}}
          <li><a href="/profile" class="btn btn-primary">Profile</a></li>
          <li><a href="/logout" class="btn btn-warning">Log Out</a></li>
        {{else}}
          <li><a href="/signup" class="btn btn-primary">Sign Up</a></li>
          <li><a href="/login" class="btn btn-info">Log In</a></li>
        {{/if}}
      </ul>
    </div>
  </div>

  <!-- page content -->
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        
        <!-- new post form-->
        <form class="form-inline" id="create-post">
          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Title" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description">
          </div>
          <div class="form-group">
            <input type="submit" class="btn btn-default" value="Add Post">
          </div>
        </form>
        <br>

        <!-- list of posts -->
        <ul class="list-group" id="posts-list">
          
          <!-- handlebars template -->
          <script id="posts-template" type="text/x-handlebars-template">
            \{{#each posts}}
              <li class="list-group-item post" data-id="\{{_id}}">

                <!-- post label (title) -->
                <span class="label label-default">\{{title}}</span>
                
                <!-- post description -->
                \{{description}}

                <div class="pull-right">
                  <!-- add comment toggle -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#add-comment-\{{_id}}">
                    <span class="glyphicon glyphicon-comment"></span>
                  </a>
                  <!-- pencil icon to toggle update form -->
                  <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-\{{_id}}">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </a>
                  
                  <!-- trash can icon to delete post -->
                   <a href="javascript:void(0)" class="delete-post">
                    <span class="glyphicon glyphicon-trash"></span>
                  </a>
                </div>
                
                <!-- form to update post -->
                <div class="collapse" id="update-\{{_id}}">
                  <br>
                  <form class="form-inline update-post">
                    <div class="form-group">
                      <input type="text" name="title" class="form-control" placeholder="Title" value="\{{title}}">
                    </div>
                    <div class="form-group">
                      <input type="text" name="description" class="form-control" placeholder="Description" value="\{{description}}">
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-block btn-default" value="Update">
                    </div>
                  </form>
                </div>

                <!-- Show all comments and a form to add a new comment at the bottom -->
                <div class="collapse" id="add-comment-\{{_id}}">
                  <br>
                  <ul class="list-group">
                    \{{#each comments}}
                      <li class="list-group-item comment">
                        \{{body}}
                      </li>
                    \{{/each}}
                    <li class="list-group-item comment">
                      <!-- Form to add a Comment to a Post -->
                      <form class="form-inline add-comment">
                        <div class="form-group">
                          <input type="text" name="body" class="form-control" placeholder="Comment Text">
                        </div>
                        <div class="form-group">
                          <input type="submit" class="btn btn-block btn-default" value="Add Comment">
                        </div>
                      </form>
                    </li>
                  </ul>
                </div>

              </li>
            \{{/each}}
          </script>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- jquery -->
  <script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

  <!-- bootstrap js -->
  <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  <!-- handlebars -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js"></script>

  <!-- custom script -->
  <script type="text/javascript" src="scripts/main.js"></script>
</body>
</html>
